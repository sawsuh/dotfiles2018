#modes:
#super + r - run
#super + s - node contrl
#supre + a - resize
#super + w - preselect

#
# wm independent hotkeys
#

# terminal emulator
super + r; z
	urxvt -name term

super + r; x
	python3 /home/prashant/.pyscripts/pt.py

# program launcher
super + r; r
	export PATH=/home/prashant/.local/bin:$PATH; rofi -theme rofi-theme -show run -display-run ""
# password manager
super + r; p
	rofi-pass

# start file browser
super + r; f
	python3 ~/.pyscripts/pfiles.py

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# suspend
super + alt + Escape
	systemctl suspend

# quit bspwm 
super + alt + shift + Escape
	pkill bspwm

# close and kill
super + s: {_, shift + } q
	bspc node -{c,k}

#
# state/flags
#


# set the window state
super + {t,shift + t,x,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + s: {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# shift window into preselected region
super + s: super + {h,j,k,l}
	bspc node --to-node {west,south,north,east}

# cycle the focused desktop mode
super + m 
	bspc desktop focused --layout next

# focus the next in the current desktop
super + s: {_,shift + }Tab
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + {c,v}
	bspc desktop -f {prev,next}.local; 

# send to the given desktop
super + s: {1-9,0}
	bspc node -d '^{1-9,10}'

# send to next desktop
super s: {c,v}
	bspc node -d {prev,next}

# focus the given desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'; 
#
# preselect
#

# preselect the direction
super + w: {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused node
super + w: c 
	bspc node -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + a: {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + a: shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# take a screenshot
super + alt + c
	bash ~/.scr.sh

# take a screenshot with selection
super + shift + c
	maim -sul -b 0 -c 0.25882352941176473,0.25882352941176473,0.23921568627450981,0.5 $(date +'%-d-%-m-%-y_%-R').png

# volume control
super + shift + {m,n} 
	pactl -- set-sink-volume 1 {+3%,-3%}

# mute
super + shift + n
	pactl set-sink-mute 1 toggle

# bar notification toggle
super + {b,g}
	python3 ~/.pyscripts/pbarnotif.py {1,2}

