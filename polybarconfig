[bar/main]
bottom = false
height = 35
background = #202020
foreground =  ${colors.my_foreground}
module-margin = 2
;radius = 10
line-size = 5
line-color = ${colors.my_background}
;offset-y = 50
font-0 = Gohu GohuFont:pixelsize=14
font-1 = Icons:pixelsize=12
;border-size = 5
;border-color = #42423d
modules-center = title
modules-right = date
modules-left = bspwm
padding = 1

[bar/main_bar]
bottom = false
width = 700
offset-x = 610
;modules-left = bspwm
modules-center = title
;modules-right = date
inherit = bar/main

[bar/left_bar]
width = 250
offset-x = 60
modules-left = bspwm
;modules-center = title
;modules-right = date
inherit = bar/main

[bar/right_bar]
offset-x = 1580
width = 280
;modules-left = bspwm
;modules-center = title
modules-right = date
inherit = bar/main

[settings]
format-underline = ${colors.my_color0}

[module/title]
type = internal/xwindow
label = " %title% "
label-empty = 
label-maxlen = 60
format-background = ${colors.my_background}
format-foreground = ${colors.my_foreground}
format-underline = ${colors.my_background}
#label-separator = 
#label-separator-padding = 1
#label-padding = 1

[module/mpd]
type = internal/mpd
format-online = %{A1:mpc -h 127.0.0.1 toggle:}%{A3:mpc -h 127.0.0.1 next:}%{A2:mpc -h 127.0.0.1 prev:}%{A4:mpc -h 127.0.0.1 volume +2:}%{A5: mpc -h 127.0.0.1 volume -2:}<label-song>%{A}%{A}%{A}%{A}%{A}
label-song-maxlen = 35

[module/bspwm]
type = internal/bspwm
label-focused = %name%
label-focused-foreground = ${colors.my_foreground}
;label-focused-background = ${colors.my_background}
label-focused-background = #42423d
label-focused-underline = ${colors.my_background}
label-focused-padding = 2
label-focused-overline = ${colors.my_background}

label-occupied = %name%
;label-occupied = 
label-occupied-underline = ${colors.my_background}
;label-occupied-foreground = #787376
label-occupied-padding = 2
;label-occupied-background = #202020

pin-workspaces = true
label-empty = 

[module/i3]
type = internal/i3
ws-icon-0 = "1;one"
ws-icon-1 = "2;two"
ws-icon-2 = "3;three"
ws-icon-3 = "4;four"
ws-icon-4 = "5;five"
ws-icon-5 = "6;six"
ws-icon-6 = "7;seven"
ws-icon-7 = "8;eight"
ws-icon-8 = "9;nine"
ws-icon-9 = "0;zero"
ws-icon-default = "ïŠ°"
fuzzy-match = true

label-unfocused-background = ${colors.my_background}
label-unfocused-foreground = ${colors.my_foreground}
label-unfocused-underline = ${colors.my_background}

label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.my_color0}

label-focused = %icon%
label-focused-foreground = ${colors.my_foreground}
label-focused-background = ${colors.my_background}
label-focused-underline = ${colors.my_color0}
label-focused-padding = 2

label-unfocused = %icon%
label-unfocused-padding = 2

label-visible = %icon%
