[module/date]
type = custom/script
exec = date +'%a %d %b, %I %M %p' | tr '[:upper:]' '[:lower:]'
interval = 5


[module/date2]
type = custom/script
exec = date +'%a %d %b, %I %M %p' | tr '[:upper:]' '[:lower:]'
interval = 5
format-background = #42423d 
format-padding = 2

[module/2bwm]
