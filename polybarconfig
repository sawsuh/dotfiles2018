label-urgent-padding = 2


[module/date]
type = internal/date
interval = 5
time = " %{A3:systemctl suspend:}%a %b %d, %I:%M %p%{A} "
format-prefix-foreground = ${colors.my_foreground}
format-underline = ${colors.my_background}
label = %date%%time%
format-margin = 0
format-background = ${colors.my_background}
label-padding = 1

[module/ewmh]
type = internal/xworkspaces
enable-click = false
enable-scroll = false

